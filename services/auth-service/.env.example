# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=mysql://auth_user:auth_password@localhost:3306/weace_auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Auth0 Configuration
